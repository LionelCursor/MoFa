<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unique.mofaforhackday.activity.SetWallpaperActivity">
    <ImageView
        android:id="@+id/set_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
    <RelativeLayout
        android:id="@+id/wallpaper_ok"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#44000000"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:id="@+id/duigou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ok_1"
            android:layout_centerVertical="true"
            android:background="@null"/>
        <TextView
            android:layout_toRightOf="@id/duigou"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:text="@string/set_wallpaper"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="20sp"/>
        </RelativeLayout>

</RelativeLayout>
