<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ok_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:id="@+id/ok_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:background="#eeeeee"
        android:orientation="horizontal">
    <ImageButton
        android:id="@+id/ok_main_page"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ok_back_main_page_selector"
        android:background="@null"/>
    <ImageButton
        android:id="@+id/ok_set_mobile_background"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ok_mobile_background_selector"
        android:background="@null"/>
        <!--TODO-share button-->
    <ImageButton
        android:id="@+id/ok_share"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ok_share_selector"
        android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_linear_layout"
        android:orientation="vertical"
        android:layout_above="@id/ok_linearLayout"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ok_main_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
             />
        <!--TODO-shadow Layer-->
        </LinearLayout>
</RelativeLayout>