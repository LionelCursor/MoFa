<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ok_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#14000000"/>
    <LinearLayout
        android:id="@+id/ok_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:background="#fff"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            >
            <ImageButton
                android:id="@+id/ok_main_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-20dp"
                android:src="@drawable/home"
                android:background="@drawable/transparent_selector"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ok_main_page"
                    android:layout_marginTop="-30dp"
                    android:textSize="10sp"
                    android:text="返回主页"/>
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#eeeeee"/>
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            >
            <ImageButton
                android:id="@+id/ok_set_mobile_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-20dp"
                android:src="@drawable/bgset"
                android:background="@drawable/transparent_selector"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ok_set_mobile_background"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:layout_marginTop="-30dp"
                android:text="设为壁纸"/>
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#eeeeee"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <ImageButton
                android:id="@+id/ok_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-20dp"
                android:src="@drawable/share"
                android:background="@drawable/transparent_selector"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ok_share"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:layout_marginTop="-30dp"
                android:text="分享图片"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_linear_layout"
        android:orientation="vertical"
        android:layout_above="@id/ok_linearLayout"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ok_main_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
             />
        <!--TODO-shadow Layer-->
        </LinearLayout>
</RelativeLayout>